@model Hospital_Management_System.Models.Visit

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="DateOfVisit" class="control-label"></label>
    <input asp-for="DateOfVisit" class="form-control" />
    <span asp-validation-for="DateOfVisit" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Complaint" class="control-label"></label>
    <input asp-for="Complaint" class="form-control" />
    <span asp-validation-for="Complaint" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="DoctorID" class="control-label"></label>
    <select asp-for="DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
    <span asp-validation-for="DoctorID" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="PatientID" class="control-label"></label>
    <select asp-for="PatientID" class="form-control" asp-items="ViewBag.PatientID"></select>
    <span asp-validation-for="PatientID" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div>